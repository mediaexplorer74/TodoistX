<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:kUMTE_2018"
             x:Class="kUMTE_2018.MainPage"
             Title="Home">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Setting" Clicked="Setting_OnClicked"  x:Name="Setting"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <!-- Place new controls here -->
            <Label Text="Welcome to kUMTE 2018 Application!" 
                   HorizontalOptions="Center" />
            <Button Text="Browse projects" 
                    Clicked="Browse_OnClicked"/>
            <Label x:Name="CoordLabel"
                   Text="Waitting for Location service"
                   HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
