<Page
    x:Class="TodoistUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TodoistUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Button Content="Get data" Height="32" Margin="10,10,10,10" VerticalAlignment="Top" Width="200" Click="Button_Click"/>
            <ListView x:Name="Output" Height="200" Margin="5,5,5,5" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Page>
